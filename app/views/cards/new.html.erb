<div class="col-xs-6">
    <h1>Edit card</h1>

    <% if @card.errors.any? %>
    <div id="error_explanation">
      <span class="label label-danger">
        <%= pluralize(@card.errors.count, "error") %> prohibited this article from being saved:
      </span>
      <ul>
        <% @card.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<%= form_for :card, url: cards_path do |f| %>
  <div class="form-group">
    <%= f.label(:original_text, "Original text") %>
    <%= f.text_field :original_text, class: "form-control" %>
  </div>

<div class="form-group">
    <%= f.label(:translated_text, "Translated text") %>
    <%= f.text_field :translated_text, class:  "form-control" %>
  </div>

  <%= f.submit %>

  
<% end %>
</div>
