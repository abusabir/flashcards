<div class="jumbotron">
  <h1>All cards</h1>
</div>
<table class="table table-striped">
  <tr>
    <th>#</th>
    <th>Original text</th>
    <th>Translated text</th>
    <th>Review date</th>
    <th>Actions</th>
  </tr>
  <% @cards.each do |card| %>
    <tr>
        <td><%= card.id %></td>
        <td><%= card.original_text %></td>
        <td><%= card.translated_text %></td>
        <td><%= l card.review_date, format: :short  %></td>
        <td><%= link_to 'Просмотреть', card_path(card.id) %>/ <%= link_to 'Редактировать' , edit_card_path(card.id) %>/<%= link_to 'Удалить' %></td>
    </tr>
  <% end %>
</table>

